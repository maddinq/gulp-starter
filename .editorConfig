; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF

[*.php]
indent_style = tab
indent_size = 2

[*.test]
indent_style = space
indent_size = 4

[*.rst]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.hbs]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.twig]
indent_style = space
indent_size = 2

[*.xml]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 2
